<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kodingkingdom.poleungkuk.onetouch17" version="0.95" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>一觸即動</name>
    <description>一觸即動 ·「營 · 智」健康活躍生活手機應用程式</description>
    <author email="plkinfo@poleungkuk.org.hk" href="http://www.poleungkuk.org.hk/">保良局</author>
    <content src="index.html" />
    <gap:config-file overwrite="true" parent="UIViewControllerBasedStatusBarAppearance" platform="ios">
        <false />
    </gap:config-file>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="instagram://*" />
    <allow-intent href="fb://*" />
    <allow-intent href="mailto:*" />
    <preference name="target-device" value="handset" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="true" />
</widget>
